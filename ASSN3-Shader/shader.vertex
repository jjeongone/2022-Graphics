#version 330 core

layout (location = 0) in vec3 position;
out vec4 vertexColor;

uniform mat4 transformation;
uniform mat4 camera;
uniform mat4 projection;
uniform mat4 model;
uniform vec4 color;

void main()
{
    gl_Position =  projection * camera * model * vec4(position, 1.0);
	vertexColor = color;
}